/* ============================================================
   HOPE OMNI-CHAT - Textual CSS Styles
   Theme: Dark Professional
   ============================================================ */

/* === SCREEN === */
Screen {
    background: $surface;
}

/* === HEADER === */
#header {
    dock: top;
    height: 3;
    background: $primary;
    color: $text;
    text-align: center;
    padding: 1;
}

#header-title {
    text-style: bold;
}

#cost-display {
    width: 15;
    padding: 0 1;
    color: $success;
    text-align: right;
}

/* === TOP BAR === */
#top-bar {
    dock: top;
    height: 5;
    layout: horizontal;
    background: $surface-darken-1;
    border-bottom: solid $primary;
}

/* === TASK PANEL === */
#task-panel {
    width: 1fr;
    height: 100%;
    padding: 0 1;
}

.task-panel-header {
    text-style: bold;
    color: $primary;
    margin-bottom: 0;
}

.task-line {
    height: 1;
    color: $text;
}

/* === MAIN CONTAINER === */
#main-container {
    layout: vertical;
}

/* === CHAT LOG === */
#chat-log {
    height: 1fr;
    border: solid $primary;
    padding: 1;
    overflow-y: auto;
    scrollbar-background: $surface;
    scrollbar-color: $primary;
}

/* === MESSAGE STYLES === */
.message {
    margin-bottom: 1;
    padding: 1;
    width: 100%;
}

.message-user {
    background: $success-darken-2;
    color: $text;
    text-align: right;
    border: solid $success;
}

.message-gemini {
    background: #4a1a6b;
    color: $text;
    border: solid magenta;
}

.message-gpt {
    background: #4a4a1a;
    color: $text;
    border: solid yellow;
}

.message-claude {
    background: #1a4a4a;
    color: $text;
    border: solid cyan;
}

.message-system {
    background: $surface-darken-1;
    color: $text-muted;
    text-style: italic;
    border: solid $primary-darken-2;
}

.message-header {
    text-style: bold;
    margin-bottom: 0;
}

.message-time {
    color: $text-muted;
    text-style: italic;
}

/* === STATUS BAR === */
#status-bar {
    dock: bottom;
    height: 3;
    background: $surface-darken-1;
    padding: 0 1;
    layout: horizontal;
}

.agent-status {
    width: 1fr;
    height: 100%;
    content-align: center middle;
    padding: 0 1;
}

.agent-connected {
    color: $success;
}

.agent-disconnected {
    color: $error;
}

/* === INPUT AREA === */
#input-area {
    dock: bottom;
    height: 15;
    layout: horizontal;
    padding: 1;
    background: $surface-darken-1;
}

#message-input {
    width: 1fr;
    height: 100%;
    border: solid $primary;
    padding: 0 1;
}

#message-input:focus {
    border: solid $accent;
}

/* === BUTTONS === */
.send-button {
    width: 12;
    height: 3;
    margin-left: 1;
}

#send-all {
    background: $primary;
}

#send-all:hover {
    background: $primary-lighten-1;
}

/* === HOTKEY HINTS === */
#hotkey-bar {
    dock: bottom;
    height: 1;
    background: $surface-darken-2;
    color: $text-muted;
    text-align: center;
}

/* === TYPING INDICATOR === */
.typing-indicator {
    color: $warning;
    text-style: italic;
    padding-left: 2;
}

/* === SCROLLBAR === */
VerticalScroll > ScrollBar {
    background: $surface;
}

VerticalScroll > ScrollBar > .scrollbar--bar {
    background: $primary;
}

/* ============================================================
   SEARCH MODAL STYLES
   ============================================================ */

/* === SEARCH MODAL CONTAINER === */
#search-modal {
    width: 80%;
    height: 80%;
    background: $surface;
    border: thick $primary;
    padding: 1 2;
}

#search-title {
    text-style: bold;
    color: $primary;
    text-align: center;
    padding-bottom: 1;
    border-bottom: solid $primary-darken-2;
}

/* === SEARCH INPUT ROW === */
#search-input-row {
    height: 3;
    margin-top: 1;
    layout: horizontal;
}

#search-input {
    width: 1fr;
    height: 100%;
}

#search-btn {
    width: 12;
    margin-left: 1;
}

/* === FILTER ROW === */
#search-filters {
    height: 3;
    margin-top: 1;
    layout: horizontal;
    align: left middle;
}

.filter-label {
    width: auto;
    padding: 0 1;
    color: $text-muted;
}

#search-filters Checkbox {
    width: auto;
    padding: 0 1;
}

/* === DATE FILTERS === */
#search-date-filters {
    height: 3;
    margin-top: 1;
    layout: horizontal;
    align: left middle;
}

.date-input {
    width: 15;
    margin: 0 1;
}

#clear-filters-btn {
    width: 10;
    margin-left: 2;
}

/* === STATUS LINE === */
#search-status {
    height: 1;
    margin-top: 1;
    color: $text-muted;
    text-style: italic;
}

/* === SEARCH RESULTS === */
#search-results {
    height: 1fr;
    margin-top: 1;
    border: solid $primary-darken-2;
    padding: 1;
}

.search-result {
    padding: 1;
    margin-bottom: 1;
    background: $surface-darken-1;
    border: solid $primary-darken-3;
}

.search-result:hover {
    background: $surface-lighten-1;
    border: solid $primary;
}

.search-result.selected {
    background: $primary-darken-2;
    border: solid $primary;
}

.search-result-header {
    text-style: bold;
    color: $accent;
}

.search-result-content {
    color: $text-muted;
    margin-top: 0;
}

/* === PAGINATION === */
#search-pagination {
    height: 3;
    margin-top: 1;
    layout: horizontal;
    align: center middle;
}

#page-info {
    width: auto;
    padding: 0 2;
    color: $text-muted;
}

#prev-page-btn, #next-page-btn {
    width: 12;
}

/* === SEARCH FOOTER === */
#search-footer {
    height: 2;
    margin-top: 1;
    align: center middle;
    border-top: solid $primary-darken-2;
}

.search-hint {
    color: $text-muted;
    text-style: italic;
}
